<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E6CA">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/circle_background"
        android:padding="20dp"
        android:src="@drawable/scaled_logo_icon"
        android:scaleType="centerInside" />

    <!-- App Name -->
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="QUIZ APP"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- Take Quiz Button -->
    <Button
        android:id="@+id/take_quiz_button"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_button"
        app:backgroundTint="#4CAF50"
        android:elevation="4dp"
        android:padding="10dp"
        android:text="Take Quiz"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Container for Login Buttons -->
    <LinearLayout
        android:id="@+id/login_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <!-- Facebook Login Button -->
        <Button
            android:id="@+id/facebook_login_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="#3B5998"
            android:drawableStart="@android:drawable/ic_menu_share"
            android:drawablePadding="10dp"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Google+ Login Button -->
        <Button
            android:id="@+id/google_login_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            app:backgroundTint="#DB4437"
            android:drawableStart="@android:drawable/ic_menu_add"
            android:drawablePadding="10dp"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
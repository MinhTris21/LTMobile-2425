<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Central Shopping Cart Icon -->
    <ImageView
        android:id="@+id/center_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background"
        android:padding="20dp"
        android:src="@android:drawable/ic_menu_add"
        android:scaleType="centerInside" />

    <!-- LED TV Button -->
    <Button
        android:id="@+id/led_tv_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@id/center_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/circle_button_orange"
        android:drawableTop="@android:drawable/ic_menu_gallery"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="LED TV"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Furniture Button -->
    <Button
        android:id="@+id/furniture_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toStartOf="@id/center_icon"
        android:layout_alignTop="@id/led_tv_button"
        android:layout_marginEnd="50dp"
        android:background="@drawable/circle_button_orange"
        android:drawableTop="@android:drawable/ic_menu_info_details"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="FURNITURE"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Hotel Button -->
    <Button
        android:id="@+id/hotel_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/center_icon"
        android:layout_alignTop="@id/led_tv_button"
        android:layout_marginStart="50dp"
        android:background="@drawable/circle_button_red"
        android:drawableTop="@android:drawable/ic_menu_mapmode"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="HOTEL"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Flight Button -->
    <Button
        android:id="@+id/flight_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toStartOf="@id/center_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/circle_button_green"
        android:drawableTop="@android:drawable/ic_menu_directions"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="FLIGHT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Fashion Button -->
    <Button
        android:id="@+id/fashion_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/center_icon"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/circle_button_green"
        android:drawableTop="@android:drawable/ic_menu_camera"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="FASHION"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Beauty Button -->
    <Button
        android:id="@+id/beauty_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toStartOf="@id/center_icon"
        android:layout_below="@id/center_icon"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle_button_purple"
        android:drawableTop="@android:drawable/ic_menu_my_calendar"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="BEAUTY"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Mobile Button -->
    <Button
        android:id="@+id/mobile_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/center_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle_button_blue"
        android:drawableTop="@android:drawable/ic_menu_call"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="MOBILE"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Offers Button -->
    <Button
        android:id="@+id/offers_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/center_icon"
        android:layout_below="@id/center_icon"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/circle_button_cyan"
        android:drawableTop="@android:drawable/ic_menu_agenda"
        android:padding="5dp"
        android:elevation="4dp"
        android:text="OFFERS"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>